Column {
    property text
    padding: 10
    margin: 10
    y: 30
    anchors.fillWidth: parent
    pointer.onClick() {
        this.parent = null
    }

    Rectangle {
        layout.enabled: false
        anchors.fill: parent
        color: 'red'
        opacity: 0.9
        radius: 10
        border.width: 2
        border.color: 'white'
    }

    Text {
        text: parent.text
        layout.fillWidth: true
    }
}
