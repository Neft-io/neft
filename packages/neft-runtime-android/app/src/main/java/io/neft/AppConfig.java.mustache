package io.neft;

import android.content.Context;
import android.content.Intent;
import com.jakewharton.processphoenix.ProcessPhoenix;

class AppConfig {
    static void initExtensions() {
        {{#extensions}}
        io.neft.extensions.{{&packageName}}.{{&name}}Extension.register();
        {{/extensions}}
    }

    static void restart() {
        Context context = App.getInstance().getActivity().getBaseContext();
        ProcessPhoenix.triggerRebirth(context, new Intent(context, {{&manifest.package}}.MainActivity.class));
    }
}
